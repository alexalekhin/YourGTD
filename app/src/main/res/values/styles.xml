<resources>

    <!--Common themes-->

    <!-- Dark Theme -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorMaterialBackgroundDark</item>
        <item name="android:statusBarColor">@color/colorMaterialBackgroundDark</item>
        <item name="android:navigationBarColor">@color/colorMaterialBackgroundDark</item>
        <item name="shapeAppearanceLargeComponent">@style/TODOLargeComponentShapeAppearance</item>

        <item name="fontFamily">@font/oxygen_mono_regular</item>
    </style>
    <!--Light Theme-->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="materialCardViewStyle">@style/ToDoDarkCardView</item>-->
    </style>

    <!--Material components themes-->
    <style name="ToDoCardView.Dark" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/colorMaterialBackgroundDark</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ToDoCardView.Light" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/colorMaterialBackgroundLight</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="TODOLargeComponentShapeAppearance" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>
